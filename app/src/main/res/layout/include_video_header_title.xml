<com.cao.old.tv.widget.theme.ColorRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/normal_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_sixty_eight"
    android:background="?attr/colorPrimary"
    android:paddingTop="20dp">

    <RelativeLayout
        android:id="@+id/video_header_rl_back"
        android:layout_width="@dimen/size_forty"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/back" />

    </RelativeLayout>

    <com.cao.old.tv.widget.theme.ColorTextView
        android:id="@+id/fg_title_name"
        style="@style/title_tv_style"
        android:layout_centerHorizontal="true"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="?attr/md_title_color" />

    <RelativeLayout
        android:id="@+id/video_header_rl_collect"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/standard_x_small_margin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/video_header_iv_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/collection" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_header_collect_clear"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/standard_x_small_margin"
        android:visibility="gone">

        <TextView
            style="@style/common_tv_style"
            android:layout_centerInParent="true"
            android:text="@string/clean" />

    </RelativeLayout>
</com.cao.old.tv.widget.theme.ColorRelativeLayout>